{
	"manifest_version": 2,

	"name": "Justify",
	"version": "1.0",
	"description": "A productivity tool.",
	"browser_action": {
        "default_icon": "icon-128.png",
        "default_popup": "popup.html"
	},
    "background": {
        "scripts": ["justify.js"]
    },
    "permissions": [
        "webNavigation"
    ]
}